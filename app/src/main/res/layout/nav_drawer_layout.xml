<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/drawer_closed"
                android:id="@+id/drawer_toggle_button"/>
    </FrameLayout>

    <RelativeLayout
            android:id="@+id/navigation_drawer"
            android:layout_gravity="start"
            android:layout_width="@dimen/thumb_width"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/drawer_background">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_above="@+id/settings_button">
            <ViewSwitcher
                    android:id="@+id/drawer_list_switcher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <ImageView
                            android:id="@+id/add_button"
                            android:layout_width="match_parent"
                            android:layout_height="72dip"
                            android:src="@drawable/ic_action_add"
                            android:paddingTop="15dip"
                            android:paddingBottom="15dip"
                            android:background="@drawable/drawer_button"/>

                    <ListView
                            android:id="@+id/users_list"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>

                    <ImageView
                            android:id="@+id/user_footer"
                            android:layout_width="match_parent"
                            android:layout_height="72dip"
                            android:src="@drawable/drawer_feedback"
                            android:scaleType="centerCrop"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <ImageView
                            android:id="@+id/drawer_back_button"
                            android:layout_width="match_parent"
                            android:layout_height="72dip"
                            android:src="@drawable/ic_action_back"
                            android:paddingTop="15dip"
                            android:paddingBottom="15dip"
                            android:background="@drawable/drawer_button"/>

                    <ListView
                            android:id="@+id/messages_list"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>

                    <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <ImageView
                                android:id="@+id/message_footer"
                                android:layout_width="match_parent"
                                android:layout_height="72dip"
                                android:scaleType="centerCrop"
                                android:src="@drawable/drawer_new_user_message"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="#ede8e2"
                                android:text="@string/drawer_new_user_message_overlay_label"/>

                    </FrameLayout>

                </LinearLayout>
            </ViewSwitcher>
        </FrameLayout>

        <ImageView
                android:id="@+id/settings_button"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:src="@drawable/ic_action_settings"
                android:paddingTop="15dip"
                android:paddingBottom="15dip"
                android:layout_alignParentBottom="true"
                android:background="@drawable/drawer_button"/>
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>