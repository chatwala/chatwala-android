<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.chatwala.android">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>
    <uses-feature android:name="android.hardware.camera.front"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <uses-permission android:name="android.permission.VIBRATE"/>

    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <permission android:name="com.chatwala.android.permission.C2D_MESSAGE"
                android:protectionLevel="signature" />
    <uses-permission android:name="com.chatwala.android.permission.C2D_MESSAGE" />

    <application
            android:label="@string/app_name_dev"
            android:icon="@drawable/appicon"
            android:name=".app.ChatwalaApplication"
            android:largeHeap="true">

        <activity android:name=".camera.ChatwalaActivity"
                  android:label="@string/app_name_dev"
                  android:launchMode="singleTask"
                  android:hardwareAccelerated="true"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <intent-filter>
                <data android:scheme="http" />
                <data android:scheme="https" />
                <data android:host="chatwala.com" />
                <data android:host="www.chatwala.com" />
                <data android:pathPattern=".*"/>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
        </activity>

        <activity android:name=".app.KillswitchActivity"
                  android:label="@string/killswitch"
                  android:screenOrientation="portrait"/>

        <activity android:name=".contacts.TopContactsActivity"
                  android:label="@string/top_contacts_title"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="adjustPan"
                  android:theme="@style/ChatwalaTopContactsTheme"/>
        <activity android:name=".sms.SmsActivity"
                  android:label="@string/send_sms"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="adjustPan"
                  android:theme="@style/ChatwalaTheme">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.chatwala.android.camera.ChatwalaActivity" />
        </activity>
        <activity android:name=".app.SettingsActivity"
                  android:label="@string/settings_label"
                  android:screenOrientation="portrait"
                  android:theme="@style/ChatwalaTheme">

            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.chatwala.android.camera.ChatwalaActivity" />
        </activity>

        <activity android:name=".app.ProfilePicActivity"
                  android:label="@string/update_profile_pic_label"
                  android:screenOrientation="portrait"
                  android:theme="@style/ChatwalaTheme">

            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.chatwala.android.app.SettingsActivity" />
        </activity>

        <activity android:name=".app.FeedbackActivity"
                  android:label="@string/feedback_label"
                  android:screenOrientation="portrait"
                  android:theme="@style/ChatwalaTheme">

            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.chatwala.android.app.SettingsActivity" />
        </activity>

        <receiver android:name=".app.ReferrerReceiver" android:exported="true">
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>

        <receiver android:name=".sms.SmsRetryReceiver" android:exported="false" />
        <receiver android:name=".sms.SmsSentReceiver" android:exported="false" />

        <receiver
                android:name=".app.GcmBroadcastReceiver"
                android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="com.chatwala.android" />
            </intent-filter>
        </receiver>

        <service android:name=".app.FetchMessagesService"
                 android:exported="false"/>

        <meta-data android:name="com.crashlytics.ApiKey" android:value="b0462fa18b0b7748606c6c8cc641889ad1ee6eb1"/>
        <meta-data android:name="com.google.android.gms.version" android:value="@integer/google_play_services_version"/>

    </application>
</manifest>
