<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:cw="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/app_background" >
    <FrameLayout
            android:id="@+id/chatwala_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    </FrameLayout>

    <com.chatwala.android.ui.CwButton
            android:id="@+id/chatwala_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            cw:cw_button_size="100dp"/>

    <FrameLayout
            android:id="@+id/message_loading_timer_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>

</FrameLayout>