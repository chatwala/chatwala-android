<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_background">
    
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:background="#000">

            <!--<ImageView
                    android:id="@+id/close_sms_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_action_cancel"/>-->

            <RelativeLayout
                    android:id="@+id/recipients_container"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_alignParentTop="true"
                    android:layout_above="@+id/contacts_filter"
                    android:layout_marginTop="5dp"
                    android:visibility="visible">

                <TextView
                        android:id="@+id/send_sms_lbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#888"
                        android:text="To:"/>

                <ListView
                        android:id="@+id/recipients_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/send_sms_lbl"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">
                </ListView>

            </RelativeLayout>

            <AutoCompleteTextView
                    android:id="@+id/contacts_filter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="75dp"
                    android:hint="Enter SMS Recipients"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#fff"
                    android:inputType="textNoSuggestions">
                    <requestFocus/>
            </AutoCompleteTextView>

            <!--<EditText
                    android:id="@+id/sms_message_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:maxHeight="10dp"
                    android:ems="10"
                    android:singleLine="false"
                    android:layout_marginBottom="60dp"
                    android:hint="Message"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#888"
                    android:inputType="text"/>-->

        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/chat_watermark" />

            <TextView
                    android:id="@+id/sms_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="#000"
                    android:text="Enter recipients and tap to send"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>

        </RelativeLayout>

    </LinearLayout>

    <View
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/center_button_halo"
            android:layout_gravity="center"/>

    <TextView
            android:id="@+id/send_sms_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/red_center_button"
            android:textColor="#fff"
            android:text="Send"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="center"
            android:layout_gravity="center"/>

</FrameLayout>